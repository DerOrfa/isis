# ISIS cmake configuration file
#
# This file declares the following variables:
#
# ISIS_INSTALL_PREFIX
# ISIS_PUGIN_DIR
# ISIS_INCLUDE_DIRS
# ISIS_LIB
# ISIS_LIB_DIR
#

SET(ISIS_INSTALL_PREFIX @CMAKE_INSTALL_PREFIX@)
SET(ISIS_LIB_DEPENDS  ${CMAKE_DL_LIBS} @Boost_LIBRARIES@)
SET(ISIS_PLUGIN_DIR   @ISIS_INSTALL_PLUGIN_DIR@ )
SET(ISIS_INCLUDE_DIRS @ISIS_INSTALL_INCLUDE_DIR@ @Boost_INCLUDE_DIR@ )
SET(ISIS_RUNTIME_LOG  @ISIS_CORE_RUNTIME_LOG@)
SET(ISIS_DEBUG_LOG    @ISIS_CORE_DEBUG_LOG@)

# search isis core library
SET(CMAKE_PREFIX_PATH ${ISIS_INSTALL_PREFIX} ${CMAKE_PREFIX_PATH}) #make cmake first serch where we installed the core
FIND_LIBRARY(ISIS_LIB "isis_core")

MESSAGE(STATUS "isis library: ${ISIS_LIB}")
MESSAGE(STATUS "isis library dependencies: ${ISIS_LIB_DEPENDS}")
MESSAGE(STATUS "isis include dirs: ${ISIS_INCLUDE_DIRS}")
