%scanner                VistaScanner.h
%scanner-token-function d_scanner.lex()
%debug
%stype std::string
%class-name VistaParser
%scanner-class-name VistaScanner
%namespace vista_internal
%filenames VistaParser

%token MAGIC WORD QUOTED_STRING HISTORY_KEY IMAGE_KEY

%%

startrule:
	magic block
|
	magic history block
;

word:
	WORD
	{
		$$ = std::string(d_scanner.matched());
	}
|
	QUOTED_STRING
	{
		std::string buff(d_scanner.matched());
		$$ = buff.substr(1,buff.length()-2);
	}
;

magic:
	MAGIC word
	{
		std::cout << "MAgic " << $1 << $2 << std::endl;
	}
;

entry:
	WORD ':' WORD
	{
		std::cout << "Entry " << $1 << "=" << $3 << std::endl;
	}
|
	block
;

block_entries:
	// empty
|
	block_entries entry
;

block:
	'{' block_entries '}'
;

history:
	HISTORY_KEY ':' block
;

image:
	IMAGE_KEY block
;

chunk:
	IMAGE_KEY ':' image
;
